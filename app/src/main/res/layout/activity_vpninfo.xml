<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/serverParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivServerFlag"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        CircleProgressView:srcCompat="@drawable/ca" />

    <TextView
        android:id="@+id/tv_country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivServerFlag"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_medium_8dp"
        android:text="Country Name"
        android:textColor="@color/colorTextBlack"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/serverConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_country_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_big_16dp"
        android:background="@drawable/button_bg"
        android:onClick="serverOnClick"
        android:paddingStart="@dimen/dimen_big_16dp"
        android:paddingEnd="@dimen/dimen_big_16dp"
        android:text="TAP TO CONNECT"
        android:textColor="@color/colorTextWhite" />

    <LinearLayout
        android:id="@+id/center_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/serverConnect"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/circleViewSpeed"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="5dp"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_barColor="@color/disconnect_red"
                CircleProgressView:cpv_barWidth="30dp"
                CircleProgressView:cpv_maxValue="40"
                CircleProgressView:cpv_rimWidth="20dp"
                CircleProgressView:cpv_seekMode="false"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_spinColor="@color/dot_dark_screen1"
                CircleProgressView:cpv_textColor="@color/colorPrimaryText"
                CircleProgressView:cpv_textScale="1"
                CircleProgressView:cpv_unit="MB"
                CircleProgressView:cpv_unitColor="@color/rate_us_bg"
                CircleProgressView:cpv_unitPosition="bottom"
                CircleProgressView:cpv_value="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed"
                android:textColor="@color/colorTextBlack"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/circleViewSession"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="5dp"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_barColor="@color/progress"
                CircleProgressView:cpv_barWidth="30dp"
                CircleProgressView:cpv_rimWidth="20dp"
                CircleProgressView:cpv_seekMode="false"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_spinColor="@color/dot_dark_screen1"
                CircleProgressView:cpv_textColor="@color/colorPrimaryText"
                CircleProgressView:cpv_textScale="1"
                CircleProgressView:cpv_unitColor="@color/rate_us_bg"
                CircleProgressView:cpv_unitPosition="bottom"
                CircleProgressView:cpv_value="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session"
                android:textColor="@color/colorTextBlack"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/circleViewPing"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="5dp"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_barColor="@color/additionalServer"
                CircleProgressView:cpv_barWidth="30dp"
                CircleProgressView:cpv_maxValue="40"
                CircleProgressView:cpv_rimWidth="20dp"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_spinColor="@color/dot_dark_screen1"
                CircleProgressView:cpv_textColor="@color/colorPrimaryText"
                CircleProgressView:cpv_textScale="1"
                CircleProgressView:cpv_unit="MS"
                CircleProgressView:cpv_unitColor="@color/rate_us_bg"
                CircleProgressView:cpv_unitPosition="bottom"
                CircleProgressView:cpv_value="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ping"
                android:textColor="@color/colorTextBlack"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/serverConnectingProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/center_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_big_16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#363b40"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:layout_marginLeft="13dp"
                    android:textColor="@android:color/holo_orange_light"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/serverStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="34dp"
                    android:layout_marginRight="34dp"
                    android:gravity="center"
                    android:textColor="@color/colorTextWhite"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="Server Traffic In"
                    android:textColor="@android:color/holo_orange_light"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/serverTrafficIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView1"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="34dp"
                    android:layout_marginRight="34dp"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorTextWhite"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#363b40"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="Server Traffic Out"
                    android:textColor="@android:color/holo_orange_light"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/serverTrafficOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView2"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="34dp"
                    android:layout_marginRight="34dp"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorTextWhite"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="Total Traffic"
                    android:textColor="@android:color/holo_orange_light"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/serverTrafficInTotally"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="34dp"
                    android:layout_marginRight="34dp"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorTextWhite"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#363b40"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="Traffic Consumed"
                    android:textColor="@android:color/holo_orange_light"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/serverTrafficOutTotally"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView4"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="34dp"
                    android:layout_marginRight="34dp"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorTextWhite"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/ads_banner" />

</RelativeLayout>